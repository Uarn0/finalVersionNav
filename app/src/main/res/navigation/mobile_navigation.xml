<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_list_transport">

    <fragment
        android:id="@+id/navigation_list_transport"
        android:name="com.example.cursova.ui.home.TransportHomeFragment"
        android:label="List of transport"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_dashboard"
            app:destination="@id/navigation_add_transport" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_notifications"
            app:destination="@id/navigation_list_event" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_transport"
        android:name="com.example.cursova.ui.dashboard.AddTransportFragment"
        android:label="Adding transport"
        tools:layout="@layout/fragment_add_transport" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_home"
            app:destination="@id/navigation_list_transport" />
    </fragment>

    <fragment
        android:id="@+id/navigation_list_event"
        android:name="com.example.cursova.ui.notifications.EventHomeFragment"
        android:label="List of event"
        tools:layout="@layout/fragment_second_home">
        <argument
            android:name="transportName"
            app:argType="string" />
        <argument
            android:name="transportType"
            app:argType="string" />
        <argument
            android:name="transportImageRes"
            app:argType="integer" />
    </fragment>
</navigation>